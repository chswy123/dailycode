/***/
.footer .fooer_icon{
    color: #666;
    font-size: 24px;
}
.footer{
    background: #fff;
    border-top: 1px solid #dddddd;
    width:90%;
    padding: 8px 5%;
    position: fixed;
    left: 0;
    bottom: 0;
}
.footer dl{
    float: left;
    width: 25%;
    display: inline-block;
    text-align: center;
}
.footer dl dd{
    font-size: 12px;
}
.footer .select dd,.footer .select dt .fooer_icon{
    color: #6699cc;

}